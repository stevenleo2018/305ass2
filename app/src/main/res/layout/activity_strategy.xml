<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kingdom"
    tools:context="com.example.chengzu.sit305assignment2.StrategyActivity">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/b_read"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button23"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Strategy 1" />

    <Button
        android:id="@+id/b_read1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button24"
        android:layout_alignLeft="@+id/b_read"
        android:layout_alignStart="@+id/b_read"
        android:layout_marginBottom="62dp"
        android:text="Strategy 2" />

    <Button
        android:id="@+id/button23"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_read1"
        android:layout_alignLeft="@+id/b_read1"
        android:layout_alignStart="@+id/b_read1"
        android:layout_marginBottom="87dp"
        android:text="use Strategy 1"
        android:onClick="gospy"/>

    <Button
        android:id="@+id/button24"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_read1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/b_read1"
        android:layout_marginBottom="60dp"
        android:text="use Strategy 2"
        android:onClick="godie"/>
</RelativeLayout>
